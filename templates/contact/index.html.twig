{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">

  <div class="contact3 py-5 col-md-10">
    <div class="row no-gutters">
      <div class="container">
        <div class="row justify-content-around">
          <div class="col-lg-5">
            <div class="card-shadow">
              <img class="rounded w-100" src="https://images.unsplash.com/photo-1598257006458-087169a1f08d?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w0NzEyNjZ8MHwxfHNlYXJjaHw0fHxjYWxsfGVufDB8MHx8fDE3MjEwMzg4OTV8MA&ixlib=rb-4.0.3&q=80&w=1080" class="img-fluid">
            </div>
          </div>
          <div class="col-lg-5">
            <div class="contact-box ml-3">
              <h1 class="font-weight-light mt-2">Formulaire de contact</h1>
              <form class="mt-4">
                <div class="row">
                  <div class="col-lg-5 mb-2">
                    <div class="form-group mt-2">
                      <input class="form-control" type="text" placeholder="Votre Nom">
                    </div>
                  </div>
                  <div class="col-lg-5 ms-4 mb-2">
                      <div class="form-group mt-2">
                        <input class="form-control" type="text" placeholder="Votre Prénom">
                      </div>
                    </div>
                  <div class="col-lg-12 mb-2">
                    <div class="form-group mt-2">
                      <input class="form-control" type="email" placeholder="Votre adresse E-mail">
                    </div>
                  </div>
                  <div class="col-lg-12 mb-2">
                    <div class="form-group mt-2">
                      <input class="form-control" type="text" placeholder="Votre Téléphone">
                    </div>
                  </div>
                  <div class="col-lg-12 mb-2">
                    <div class="form-group mt-2">
                      <textarea class="form-control" rows="3" placeholder="Votre Message"></textarea>
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <button type="submit" class="btn btn-primary w-100 mt-3 text-white border-0 px-3 py-2"><span>Envoyer</span></button>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="card-contact mt-4 border-0 mb-4">
              <div class="row">
                <div class="col-lg-4 col-md-4">
                  <div class="card-body d-flex align-items-center c-detail pl-0 d-flex flex-column">
                    <div class="mr-3 align-self-center">
                      <img class="my-5" src="https://www.wrappixel.com/demos/ui-kit/wrapkit/assets/images/contact/icon1.png">
                    </div>
                    <div class="">
                      <h6 class="font-weight-medium">Addresse</h6>
                      <p class="">601 Sherwood Ave.
                        <br> San Bernandino</p>
                    </div>
                  </div>
                </div>
                <div class="col-lg-4 col-md-4">
                  <div class="card-body d-flex align-items-center c-detail d-flex flex-column">
                    <div class="mr-3 align-self-center">
                      <img class="my-5" src="https://www.wrappixel.com/demos/ui-kit/wrapkit/assets/images/contact/icon2.png">
                    </div>
                    <div class="">
                      <h6 class="font-weight-medium">Téléphone</h6>
                      <p class="">251 546 9442
                        <br> 630 446 8851</p>
                    </div>
                  </div>
                </div>
                <div class="col-lg-4 col-md-4">
                  <div class="card-body d-flex align-items-center c-detail d-flex flex-column">
                    <div class="mr-3 align-self-center">
                      <img class="my-5" src="https://www.wrappixel.com/demos/ui-kit/wrapkit/assets/images/contact/icon3.png">
                    </div>
                    <div class="">
                      <h6 class="font-weight-medium">E-mail</h6>
                      <p class="">
                        info@entreprise.com
                        <br> 123@entreprise.com
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
