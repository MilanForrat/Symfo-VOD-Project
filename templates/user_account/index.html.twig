{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<div>
    <div class="container py-5">
        <h1>Mon Compte</h1>
        <hr>
        <div class="row">
            <!-- Main Content -->
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            <!-- Sidebar -->
                            <div class="col-lg-3 border-end">
                                <div class="p-4">
                                    <div class="nav flex-column nav-pills">
                                        <a class="nav-link active" href="{{ path('app_user_account_navbar',{'variable':1}) }}"><i class="fas fa-user me-2"></i>Informations Personnelles</a>
                                        <a class="nav-link" href="{{ path('app_user_account_navbar',{'variable':2}) }}"><i class="fas fa-credit-card me-2"></i>Achats</a>
                                        <a class="nav-link" href="{{ path('app_user_account_navbar',{'variable':3}) }}"><i class="fas fa-credit-card me-2"></i>Factures</a>
                                        {# <a class="nav-link" href="#"><i class="fas fa-chart-line me-2"></i>Activity</a> #}
                                    </div>
                                </div>
                            </div>

                            <!-- Content Area -->
                            <div class="col-lg-9">
                                <div>
                                {# {{ dump(app.request.attributes.get('variable')) }} #}
                                    <!-- TROUVER DOCUMENTATION POUR INCLUDE EN FONCTION DU PARAMETRE URL -->
                                    {% if( app.request.attributes.get('variable') == 1) %}
                                        {% include 'user_account/user_informations.html.twig' %}
                                    {% elseif(app.request.attributes.get('variable') == 2) %}
                                        {% include 'user_account/user_buyings.html.twig' %}
                                    {% elseif(app.request.attributes.get('variable') == 3) %}
                                        {% include 'user_account/user_invoices.html.twig' %}
                                    {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
