{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-end">
            <a href="{{path('app_panier')}}" class="btn btn-warning">Revenir à l'étape précédente</a>
    </div>
    <h1 class="mb-5">Ma commande</h1>
    <div class="row justify-content-between">
        <!-- Shopping Cart Items -->
        <div class="col-10 col-md-9">
            <h2 class="h4 mb-3">Choix de l'adresse de facturation</h2>  
            <div>
                {{form(facturationForm)}}
            </div>
        </div>
        <div class="col-md-3">
                <a href="{{path('app_user_account_address_form')}}" class="btn btn-success">Ajouter une adresse de facturation</a>
        </div>
    </div>
</div>
{% endblock %}
